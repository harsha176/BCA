<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <!--# enter the username  -->
    <div class="field">
      <%= f.label :username %>
      <br/>
      <%= f.text_field :username %>
    </div>
    <br/>
    <!-- # enter the password   -->
    <div class="field">
      <%= f.label :password %>
      <br/>
      <%= f.password_field :clear_text_password %>
    </div>
    <br/>
    <!-- confirm the password entered -->
    <div class="field">
      <%= f.label :password_confirmation %>
      <br/>
      <%= f.password_field :clear_text_password_confirmation %>
    </div>
    <br/>
    <!-- enter email id -->
    <div class="field">
      <%= f.label :e_mail %>
      <br/>
      <%= f.text_field :e_mail %>
    </div>
    <br/>
    <!-- submit the form -->
    <div class="actions">
        <%= f.submit %>
    </div>
    <br/>
<% end %>
<div>

</div>
